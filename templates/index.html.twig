    <title>{{ title }}</title>
</head>
<body>
    <h1 class='text-center'>{{ title }}</h1>
    <table class='table table-hover table-bordered' width='80%'>
    <thead class='thead-dark'>
    <th scope='col'> ID </th>
    <th scope='col'> Email </th>
    <th scope='col'> Mot de passe </th>
    <th scope='col'> Role </th>
    <th scope='col'> Actions </th>
    </thead>
   <tr>
        {% for user in users %}
        <td>{{ user.id }}</td>
        <td>{{ user.email }}</td>
        <td>{{ user.password }}</td>
        <td>{{ user.role }}</td>
        <td><a href='read_user.php?id={{ user.id }}'> <i class='fas fa-eye btn btn-primary'></i> </a>
        <a href='update_user.php?id={{ user.id }}'> <i class='fas fa-edit btn btn-warning'></i> </a>
        <a href='remove_user.php?id={{ user.id }}'> <i class='fas fa-trash btn btn-danger'></i> </a></td></tr>
       {% endfor %}
 
    </tr>
</table>
    <a href='add_user.php' class='btn btn-primary'>Ajouter Utilisateur</a>
</body>
</html>

